                         5     ; Exercicio 1
                         6
                         7     ; Programa: controlar uma esteira transportadora:
                         8     ; a) Acionar o motor DC no sentido Horário.
                         9     ; b) Quando o produto passar pelo sensor, um sinal de Interrupção é enviado e a
                        10     ; esteira é parada por 5 segundos para permitir a retirada do produto
                        11     ; transportado.
                        12     ; c) Inverter o sentido do motor DC (Anti-horário).
                        13     ; d) Através de um mecanismo na esteira, uma nova interrupção é enviada pelo
                        14     ; mesmo pino Int0 quando a esteira estiver re-posicionada para aceitar outro
                        15     ; produto.
                        16     ; e) Parar a esteira por 10 segundos e re-iniciar o processo.
                        17
                        18     ; ----------------------------------------------------------------------
                        19
                        20
                        21     ; P2.1: pino do motor
                        22     ; P2.7: pino do motor
                        23     ; P3.2: pino do sensor (INT0)
                        24
                        25                     ORG 0
0000 8003               26                     SJMP    INST_A
                        27
                        28                     ORG 0003h
0003 800F               29                     SJMP    INTERRUPCAO
                        30
                        31     ; ----------------------------------------------------------------------
                        32     ; roda o motor no sentido horario até o sensor ser ativado
0005 75A000             33     INST_A:         MOV     P2,#00H; ; limpa os pinos
                        34                     ; motor em sentido horário
0008 D2A1               35                     SETB    P2.1 ; 1
000A C2A7               36                     CLR     P2.7 ; 0
                        37                     ; setar os pinos de interupçao
000C D2AF               38                     SETB    EA ; habilita todos os pinos
000E D2A8               39                     SETB    EX0 ; seta o P3.2
0010 D288               40                     SETB    IT0 ; sensível a borda de descida
                        41
0012 80FE               42                     SJMP    $ ; ESPERA INTERRUPÇÃO
                        43
                        44     ; ----------------------------------------------------------------------
                        45
0014 C2AF               46     INTERRUPCAO:    CLR     EA ; desabilita interrupções
                        47
                        48                     ; CONTROLE DE FLUXO!
                        49                     ; verifica se o motor quando entrou na interrupçao estava em
                        50                     ; horário (P2.7 = 0) ou anti-horário (P2.7 = 1)
0016 20A70E             51                     JB      P2.7, POSICIONADA; ;
                        52
                        53                     ; para a esteira
0019 D2A1               54                     SETB    P2.1 ; 1
001B D2A7               55                     SETB    P2.7 ; 1
                        56
001D 120038             57                     CALL    DELAY5; ; chama o delay de 5s
                        58
                        59                     ; inverte o sentido para anti-horário
0020 C2A1               60                     CLR     P2.1 ; 0
0022 D2A7               61                     SETB    P2.7 ; 1
                        62
0024 D2AF               63                     SETB    EA; ; reabilita interrupções
0026 32                 64                     RETI
                        65
                        66     POSICIONADA:    ; para a esteira
0027 D2A1               67                     SETB    P2.1 ; 1
0029 D2A7               68                     SETB    P2.7 ; 1
                        69
                        70
002B 120038             71                     CALL    DELAY5
002E 120038             72                     CALL    DELAY5
                        73
                        74                     ; motor em sentido horário
0031 D2A1               75                     SETB    P2.1 ; 1
0033 C2A7               76                     CLR     P2.7 ; 0
                        77
0035 D2AF               78                     SETB    EA; ; reabilita interrupções
0037 32                 79                     RETI
                        80
                        81
                        82     ; ----------------------------------------------------------------------
                        83
                        84     ;
0038 7AFF               85     DELAY5:         MOV     R2,#255D        ;DELAY DE 5 SEGUNDOS CONSIDERANDO CLOCK DE 12 MHz
003A 7903               86     LOOP1:          MOV     R1,#3D
003C 7803               87     LOOP:           MOV     R0,#3D
003E D8FE               88                     DJNZ    R0,$
0040 D9F8               89                     DJNZ    R1,$ - 6
0042 DAF6               90                     DJNZ    R2,$ - 8
0044 22                 91                     RET
                        92
                        93
                        94                     END
